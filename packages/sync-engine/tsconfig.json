  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "npm:stripe-experiment-sync": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["src/supabase/edge-functions/**/*"]
}
